{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"target": "ES2015",
		"lib": ["es2015"],
		"allowJs": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"inlineSourceMap": true,
		"declaration": false
	},
	//"exclude": ["./dist", "./test/**/*.ts", "./src/**/__mocks__/**"],
	"include": ["./**/*.ts", "./**/*.d.ts"]
}
